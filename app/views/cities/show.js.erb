$('#errors-section').empty()
$('#city-detail-section').empty()
$('#city-detail-section').append("<%= j render partial: 'cities/show' %>");
$('#city-detail-section').attr("city_id", "<%= @city.id %>")
$('#city-detail-section').attr("available_slots", "<%= @city.available_slots %>")
if ($('meta[name=pjs]').attr('controller') == 'hubs' && $('meta[name=pjs]').attr('action') == 'new'){
  var $city_id = $('#city-detail-section').attr("city_id")
  $.ajax({
    url: "/hubs/new",
    data: { city_id: $city_id },
    global: false,
    dataType: "script",
  });
  $('#select-hub-button').attr("data-params", "city_id="+$city_id+"");
}
