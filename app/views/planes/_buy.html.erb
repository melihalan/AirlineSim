<div id="seat_configurations">
  <select  id="select-seat-configurations" name="Select">
    <% @seat_configurations.each do |sc| %>
      <option value=""><%= "E#{sc.economy_class}/B#{sc.business_class}/F#{sc.first_class}"%></option>
    <% end %>
  </select>
</div>

<input class="plane-inputs" id="plane-count" type="integer" name="How many planes you'd like to buy ?" value="">

<div id="delivery-date-section">
  <% @i = 1 %>
  <% 3.times do %>
    <p>Plane: <%=@i%> is qued as <%=@que%> and delivery date is <%=@delivery_date%></p>
    <% @que += 1 %>
    <% @delivery_date = Turn.last.term + (@que / @production_capacity).to_i.month %>
    <% @i += 1%>
  <% end %>
</div>

<div id="cost-section">
  <% @total_cost = 3 * @cost %>
  <p>Total Cost For <%3%> Plane(s): "<%= @total_cost %> </p>
</div>

<div id="incentive-section">
  <p>Incentives:<%=@plane_manufacturer.incentive(@user_id,@total_cost)%></p>
</div>
